{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install dependencies",
      "command": ".\\build.ps1 -install",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "run tests",
      "command": "pipenv run pytest --cov",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build docs",
      "command": "pipenv run sphinx-build docs out/docs/html",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "open docs index.html",
      "command": "out/docs/html/index.html",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}